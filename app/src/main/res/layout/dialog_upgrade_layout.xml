<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content_layout_padding_size"
    android:layout_marginRight="@dimen/content_layout_padding_size"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_25"
        android:gravity="center"
        android:text="@string/upgrade_dialog_title"
        android:textColor="@color/common_normal_text"
        android:textSize="@dimen/font_19"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:text="@string/upgrade_dialog_info"
        android:textColor="@color/common_normal_text"
        android:textSize="@dimen/font_16"/>

    <TextView
        android:id="@+id/upgrade_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:minHeight="@dimen/dp_60"
        android:textColor="@color/common_normal_text"
        android:textSize="@dimen/font_16"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:src="@color/common_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13">

        <TextView
            android:id="@+id/upgrade_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/upgrade_apk_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/upgrade_update_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_weight="1.0"
        android:background="@drawable/common_dialog_ok_btn_bg"
        android:gravity="center"
        android:text="@string/upgrade_dialog_btn_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/font_19"/>


    <TextView
        android:id="@+id/upgrade_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_weight="1.0"
        android:background="@drawable/common_dialog_cancel_btn_bg"
        android:gravity="center"
        android:text="@string/upgrade_dialog_btn_ignore"
        android:textColor="@color/white"
        android:textSize="@dimen/font_19"/>

</LinearLayout>