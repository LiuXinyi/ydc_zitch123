<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/contact_us_call_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/seletor_common_btn_bg"
        android:textSize="@dimen/font_15"
        android:textColor="@color/white"
        android:text="@string/contact_us_phone"/>

    <TextView
        android:id="@+id/contact_us_send_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/seletor_common_btn_bg"
        android:textSize="@dimen/font_15"
        android:textColor="@color/white"
        android:text="@string/contact_us_email"/>

    <TextView
        android:id="@+id/contact_us_open_website"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/seletor_common_btn_bg"
        android:textSize="@dimen/font_15"
        android:textColor="@color/white"
        android:text="@string/contact_us_website"/>
</LinearLayout>