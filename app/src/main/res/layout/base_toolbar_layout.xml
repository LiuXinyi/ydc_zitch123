<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height">

    <ImageView
        android:id="@+id/toolbar_back_btn"
        style="@style/toolbar_img_btn_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/common_back"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/toolbar_back_tx"
        style="@style/toolbar_tx_btn_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="取消"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/toolbar_close_btn"
        style="@style/toolbar_img_btn_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/title_bar_height"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/toolbar_close_tx"
        style="@style/toolbar_tx_btn_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/title_bar_height"
        android:text="取消"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="88dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"/>


    <ImageView
        android:id="@+id/toolbar_action_btn"
        style="@style/toolbar_img_btn_style"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_bar_height"/>


    <TextView
        android:id="@+id/toolbar_action_tx"
        style="@style/toolbar_tx_btn_style"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|left"/>

</RelativeLayout>