<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/navi_by_map_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_5"
        android:scaleType="centerInside"
        android:src="@drawable/marker_pull"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/navi_by_map_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navi_by_map_switch"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:apiKey="@string/google_maps_key"/>

    <TextView
        android:id="@+id/navi_by_map_alert_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/navi_by_map_mapview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:minWidth="@dimen/dp_150"
        android:text="@string/car_is_nearby"
        android:textColor="@color/wallet_holo_blue_light"/>

</RelativeLayout>